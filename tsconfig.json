{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": [
    ".",
  ],
  "compilerOptions": {
    "typeRoots": ["@types"],
    "target": "es2018",
    "lib": ["es5", "es6", "es2019"],
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@config/*": ["src/config/*"],
      "@utils/*": ["src/utils/*"],
      "@constants/*": ["src/constants/*"]
    }
  }
}